<h2>物件登録</h2>

<%= form_for @property do |form| %>
  <div class="property_name">
    <%= form.label :物件名 %>
    <%= form.text_field :property_name %>
  </div>

  <div class="rent">
    <%= form.label :賃料 %>
    <%= form.text_field :rent %>
  </div>

  <div class="address">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>

  <div class="age">
    <%= form.label :築年数 %>
    <%= form.text_field :age %>
  </div>

  <div class="remarks">
    <%= form.label :備考 %>
    <%= form.text_area :remarks %>
  </div>

  <%= form.submit %>
<% end %>
