<%= form_for @property do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h3><%= @property.errors.count %>件のエラーがあります。</h3>
      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="property_name">
    <p><%= form.label :物件名 %></p>
    <%= form.text_field :property_name %>
  </div>

  <div class="rent">
    <p><%= form.label :賃料 %></p>
    <%= form.text_field :rent %>円
  </div>

  <div class="address">
    <p><%= form.label :住所 %></p>
    <%= form.text_field :address %>
  </div>

  <div class="age">
    <p><%= form.label :築年数 %></p>
    <%= form.text_field :age %>年
  </div>

  <div class="remarks">
    <p><%= form.label :備考 %></p>
    <%= form.text_area :remarks %>
  </div>
  <div class="form_nearest_stations">
  <%= form.fields_for :nearest_stations do |f| %>
  <h3>最寄り駅</h3>
    <div class="route_name">
      <p><%= f.label :路線名 %></p>
      <%= f.text_field :route_name %>
    </div>

    <div class="station_name">
      <p><%= f.label :駅名 %></p>
      <%= f.text_field :station_name %>
    </div>

    <div class="required_time">
      <p><%= f.label :徒歩分数 %></p>
      <%= f.text_field :required_time %>分
    </div>
  <% end %>
  </div>
  <%= form.submit new_or_edit %>
<% end %>
