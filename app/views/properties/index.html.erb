<h2>物件一覧</h2>
<table>
<tr>
  <th class= "property_name">物件名</th>
  <th class= "rent">賃料</th>
  <th class= "address">住所</th>
  <th class= "age">築年数</th>
  <th class= "remarks">備考</th>
</tr>
<% @properties.each do |property| %>
<tr>
  <td><%= property.property_name %></td>
  <td><%= property.rent %>円</td>
  <td><%= property.address %></td>
  <td><%= property.age %>年</td>
  <td><%= property.remarks %></td>

  <td><%= link_to "詳細", property_path(property.id) %></td>
  <td><%= link_to "編集", edit_property_path(property.id) %></td>
  <td><%= link_to "削除", property_path(property.id), method: :delete ,data: { confirm:"本当に削除してよろしいですか？"} %></td>
</tr>
<% end %>
</table>
<%= link_to '物件を登録する', new_property_path %>
