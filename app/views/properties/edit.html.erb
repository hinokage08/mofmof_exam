<h2>物件編集</h2>

<%= form_for @property do |form| %>
  <div class="property_name">
    <p><%= form.label :物件名 %></p>
    <%= form.text_field :property_name %>
  </div>

  <div class="rent">
    <p><%= form.label :賃料 %></p>
    <%= form.text_field :rent %>
  </div>

  <div class="address">
    <p><%= form.label :住所 %></p>
    <%= form.text_field :address %>
  </div>

  <div class="age">
    <p><%= form.label :築年数 %></p>
    <%= form.text_field :age %>
  </div>

  <div class="remarks">
    <p><%= form.label :備考 %></p>
    <%= form.text_area :remarks %>
  </div>

  <%= form.fields_for :nearest_stations do |f| %>
  <h3>最寄り駅</h3>
    <div class="route_name">
      <p><%= f.label :路線名 %></p>
      <%= f.text_field :route_name %>
    </div>

    <div class="station_name">
      <p><%= f.label :駅名 %></p>
      <%= f.text_field :station_name %>
    </div>

    <div class="required_time">
      <p><%= f.label :徒歩分数 %></p>
      <%= f.text_field :required_time %>
    </div>
  <% end %>
  <%= form.submit "更新する" %>
<% end %>
<%= link_to "詳細", property_path %>
<%= link_to '戻る', properties_path %>
