<h2>物件編集</h2>

<%= form_for @property do |form| %>
  <div class="property_name">
    <p><%= form.label :物件名 %></p>
    <%= form.text_field :property_name %>
  </div>

  <div class="rent">
    <p><%= form.label :賃料 %></p>
    <%= form.text_field :rent %>
  </div>

  <div class="address">
    <p><%= form.label :住所 %></p>
    <%= form.text_field :address %>
  </div>

  <div class="age">
    <p><%= form.label :築年数 %></p>
    <%= form.text_field :age %>
  </div>

  <div class="remarks">
    <p><%= form.label :備考 %></p>
    <%= form.text_area :remarks %>
  </div>

  <%= form.submit "更新する" %>
<% end %>
<%= link_to "詳細", property_path %>
<%= link_to '戻る', properties_path %>
